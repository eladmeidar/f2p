<%- if entry.orphan -%>
<%= pin_link(entry) -%>
<%= published(entry) -%>
  (Entry not found; deleted?)
<%- else -%>
<%= author_picture(entry) if !root or (root.origin_nickname != entry.origin_nickname) -%>
<%= pin_link(entry) -%>
<%= icon(entry) unless entry.same_feed?(root) -%>
 <%= author_link(entry) if root.nil? or root.user_id != entry.user_id %>
<%= original_link(entry) -%>
<%= content(entry) %>
 <%= via(entry) %>
<%= published(entry, true) -%>
<%- if comment_inline?(entry) -%>
  -- <span class="comment"><%= inline_comment(entry.comments.first) %></span>
<%- end -%>
<%= likes(entry, true) -%>
<%= url_link(entry) -%>
<%= reshare_link(entry) -%>
<%= like_link(entry) -%>
  <%- if entry.comments.empty? or comment_inline?(entry) -%>
<%= post_comment_link(entry) %>
  <%- else -%>
    <ul class="comment">
      <%- fold_comments(entry.comments).each do |comment| -%>
        <%- if comment.respond_to?(:fold_entries) -%>
          <li><%= fold_comment_link(comment) %></li>
        <%- else -%>
          <li>
            <%= comment_icon(comment) %>
            <%= comment(comment) %> <%= comment_author_link(comment) %> <%= via(comment) %>
<%= date(comment.date, true) unless comment.posted_with_entry? -%>
<%= comment_url_link(comment) -%>
<%= post_comment_link(comment.entry) if comment.last? %>
          </li>
        <%- end -%>
      <%- end -%>
    </ul>
  <%- end -%>
<%- end -%>
