<html>
  <head>
    <title><%= appname %> entries</title>
    <style type="text/css">
      body { font-size: 8pt; }
      a img { border: none; }
      p.error { color: red; }
      .latest1 { color: #FF0000; }
      .latest2 { color: #C00000; }
      .latest3 { color: #800000; }
    </style>
  </head>
  <body onLoad="body.focus()">
    <h1><%= link_to(appname, :action => 'list') %> entries</h1>
    <% if flash[:deleted_id] %>
    <p><%= undelete_link(flash[:deleted_id], flash[:deleted_comment]) %></p>
    <% end %>
    <% if @post %>
      <% form_tag(:action => 'add') do %>
      <p><%= post_entry_form %> <%= logout_link %></p>
      <% end %>
    <% end %>
    <%= page_links %>
    <ul>
      <% all = display_entries(@entries, @entry_fold) %>
      <% while !all.empty? %>
        <% entry = all.shift %>
        <%= render :partial => 'entry', :locals => {:entry => entry, :cascade => false} %>
        <% if v(all.first, :__same_kinds) %>
          <ul>
            <% while v(all.first, :__same_kinds) %>
              <% child = all.shift %>
              <%= render :partial => 'entry', :locals => {:entry => child, :cascade => true} %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </ul>
    <%= page_links %>
  </body>
</html>
